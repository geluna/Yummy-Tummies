<% if can? :mange, :all %>
<div class="container">
<h1><font color="539DC2">Listing franchises</font></h1>

<table class="table table-striped">

  <thead>
    <tr>
      <th><font color="539DC2">Name</font></th>
      <th><font color="539DC2">Address</font></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @franchises.each do |franchise| %>
      <tr>
        <td><font color="white"><%= franchise.name %></font></td>
        <td><font color="white"><%= franchise.address %></font></td>
        <td><%= link_to 'Show', franchise, :class => "btn btn-primary btn-sm", :style=>'color:#FFFFFF' %>
        <%= link_to 'Edit', edit_franchise_path(franchise), :class => "btn btn-primary btn-sm", :style=>'color:#FFFFFF' %>
        <%= link_to 'Destroy', franchise, method: :delete, :class => "btn btn-primary btn-sm", :style=>'color:#FFFFFF', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Franchise', new_franchise_path, :class => "btn btn-primary btn-sm", :style=>'color:#FFFFFF' %>
</div>

<% elsif can? :read, Franchise %>
	<div class="container">	
		<h1>Welcome! Register Franchise!</h1>
		<td><%= link_to 'Register', new_franchise_path, :class => "btn btn-primary btn-lg", :style => 'color:#FFFFFF' %><td>
	<% @franchises.each do |franchise| %>
	<tr>
		<td><%= link_to 'Enter', franchise, 'data-no-turbolink' => true, :class => "btn btn-primary btn-lg", :style => 'color:#FFFFFF' %><td>
	</tr>
	<% end %>
	</div>
<% end %>

