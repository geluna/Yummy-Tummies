<div class="container">
<h1>Listing franchises</h1>

<table class="table table-striped">

  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @franchises.each do |franchise| %>
      <tr>
      <td><%if current_user.admin?%>
            <%= check_box_tag 'approved', franchise.id , franchise.franchise_approve, :class => "task-check"%></td>
        <td><%= franchise.name %></td>
        <td><%= franchise.address %></td>

        <td><%= link_to "Approve", fran_approve_path %></td>
        <td><%= link_to 'Show', franchise %>
        <%= link_to 'Edit', edit_franchise_path(franchise) %>
        <%= link_to 'Destroy', franchise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <%else%>
        <td><%= franchise.name %></td>
        <td><%= franchise.address %></td>  
        <td><%= link_to 'Show', franchise %>
        <%= link_to 'Edit', edit_franchise_path(franchise) %>
        <%= link_to 'Destroy', franchise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin?%>
      <%= link_to 'New Franchise', new_franchise_path %>
    <%else%>
      <%= link_to 'Submit Form', new_franchise_path %>
  <%end%>
</div>
