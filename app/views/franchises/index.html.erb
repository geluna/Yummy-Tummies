<div class="container">
<h1>Listing franchises</h1>

<table class="table table-striped">

  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @franchises.each do |franchise| %>
      <tr>
        <td><%= franchise.name %></td>
        <td><%= franchise.address %></td>
        <td><%= link_to 'Show', franchise %>
        <%= link_to 'Edit', edit_franchise_path(franchise) %>
        <%= link_to 'Destroy', franchise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Franchise', new_franchise_path %>
</div>
