<div class="container">
<h1><font color="539DC2">Listing schools</font></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><font color="539DC2">Name</font></th>
      <th><font color="539DC2">Address</font></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><font color="white"><%= school.name %></font></td>
        <td><font color="white"><%= school.address %></font></td>
        <td><%= link_to 'Show', school,  :style=>'color:#FFFFFF', :class => "btn btn-primary btn-sm" %>
        <%= link_to 'Edit', edit_school_path(school),  :style=>'color:#FFFFFF', :class => "btn btn-primary btn-sm" %>
        <%= link_to 'Destroy', school, method: :delete,  :style=>'color:#FFFFFF', :class => "btn btn-primary btn-sm", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New School', new_school_path,  :style=>'color:#FFFFFF', :class => "btn btn-primary btn-sm" %>
</div>
