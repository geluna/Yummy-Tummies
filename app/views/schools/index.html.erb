<div class="container">
<h1>Listings schools</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Frachise</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
        <td><%if current_user.admin?%>
            <%= check_box_tag 'completed', school.id , school.school_approve, :class => "task-check"%>
            <td><%= school.name %></td>
            <td><%= school.address %></td>
            <td><%= school.franchise_id %></td>
          <%else%>
            </td>

            <td><%= school.name %></td>
            <td><%= school.address %></td>
            <td><%= school.franchise_id %></td>
        <%end%>

        <%if current_user.admin?%>
          <td><%= link_to "Approve", approve_path %></td>
          <td><%= link_to 'Show', school %></td>
          <td><%= link_to 'Edit', edit_school_path(school) %></td>
          <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>

        <%else%> 

          <td><%= link_to 'Show', school %></td>
          <td><%= link_to 'Edit', edit_school_path(school) %></td>
          <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
  <% if current_user.admin?%>
      <%= link_to 'New School', new_school_path %>
    <%else%>
      <%= link_to 'Submit Form', new_school_path %>
  <%end%>
</div>
