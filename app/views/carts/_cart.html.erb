
<div class="container">

<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>


<h2>Your Cart</h2>
<table>
<%= render(cart.line_items) %>
<tr class="total_line">
<td colspan="2">Total</td>
<td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
</tr>
</table>
<%= link_to "Checkout", new_order_path, method: :get, :class => "btn btn-primary btn-sm" %>

<%= link_to 'Empty cart', cart, method: :delete, :class => "btn btn-primary btn-sm", data: { confirm: 'Are you sure?' } %>

</div>
