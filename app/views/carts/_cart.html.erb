
<div class="container">

<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h2>Your Cart</h2>

<table class="table table-striped"  style="width: 35%">
	<thead>
		<tr>
			<th class="col-md-1">student</th>
	        <th class="col-md-4">Menu</th>
	        <th class="col-md-4">date</th>
	        <th class="col-md-1">price</th>
		</tr>
	</thead>
	<tbody>	
		<%= render(cart.line_items) %>
		<tr class="total_line">
			<td colspan="3">Total</td>
			<td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
		</tr>
	</tbody>
</table>

<%= link_to "Checkout", new_order_path, method: :get, :class => "btn btn-primary btn-sm" %>

<%= link_to 'Empty cart', cart, method: :delete, :class => "btn btn-primary btn-sm", data: { confirm: 'Are you sure?' } %>

</div>
