<!DOCTYPE html>
	<html>
		<head>
  			<%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
 			<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
 			<%= csrf_meta_tags %>
 		</head>
		
		<body>
			
			<nav class="navbar navbar-inverse">		
		<div class="container-fluid">
    		<div class="navbar-header">
      			<a class="navbar-brand" href="/store/index"><%= t('.Yummy Tummie') %></a>
    		</div>
    		<div>
      			<ul class="nav navbar-nav">
			        <li class="active"><%= link_to 'Menu', menus_url %></li>
			        <li><%= link_to 'My cart', carts_url %></li>
			        <li><%= link_to 'About us', store_index_url %></li>

		  	    </ul>
				<ul class="nav navbar-nav navbar-right" style="margin-right: 20px">
					<% if not logged_in? %>
			        	<li><%= link_to 'Login', login_url %></li>
					<% else %>
				       <li class="dropdown">
				         <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">My Account<span class="caret"></span></a>
				         <ul class="dropdown-menu" role="menu">
				           <li><%= link_to 'Menu', menus_url %></li>
				           <li><a href="#">My profile</a></li>
				           <li><a href="#">Payment History</a></li>
				           <li class="divider"></li>
				           <li><%= link_to 'Logout', logout_path, method: :delete %></li>
				         </ul>
				       </li>
					<% end %>
			     </ul>
		    </div>
		 </div>
	</nav>

<!--   bannger image   -->
	<div id="header">
		<img src="/assets/banner2.jpg" class="img-responsive center-block">
	</div>
		
<!--                   -->
	<div id="columns">
		<div id="main">
			<%= yield %>
		</div>
 	</div>
<div id="cart">
	<% if @cart %>
	<%= render @cart %>
	<% end %>
</div>
 	
 </body>
 </html>
 