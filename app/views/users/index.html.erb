<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>

<% content_for :title do %>My Profile<% end %>
<div class="container">
	<div class="page-header">
		<b><font color='539DC2'><h1> Welcome to your profile!</h1></font></b>
	</div>
</br>	
</br>
</br>


<table class="table table-striped"style="width: 70%">
  <thead>
    <tr>
      <th><font color='539DC2'>Address</b></th>
      <th><font color='539DC2'>Latitude</b></th>
      <th><font color='539DC2'>Longitude</b></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @users.each  do |user| %>
      <tr>
      	
        <td><font color='white'><%= user.address %></font></td>
        <td><font color='white'><%= user.latitude %></font></td>
        <td><font color='white'><%= user.longitude %></font></td>
       	<td> <font color='white'><%= link_to 'show', user , :class => "btn btn-primary btn-sm", :style=>'color:#000000;'%></font></td>
       	
      </tr>
    <% end %>
  </tbody>
</table>
<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>
</div>
<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>
